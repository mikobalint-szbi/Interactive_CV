    <authorEmail>asika@asikart.com</authorEmail>
    <authorUrl>http://asikart.com</authorUrl>
    <version>1.0</version>
    <description>MOD_contacts_INSTALL_DESC</description>
    
    
    <scriptfile>install.php</scriptfile>
    
    <!-- module contacts now has no sql file
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.sql</file>
          </sql>
    </install>
    
    
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.sql</file>
          </sql>
    </uninstall>
    -->
    
    
    <files>
        <filename module="mod_contacts">mod_contacts.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
        <filename>index.html</filename>
        <filename>mod_contacts.xml</filename>
        <filename>helper.php</filename>
        <filename>install.php</filename>
    </files>
    
    
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_FOOTER" />
    
    
    <config>
        
        <fields name="params">
            
            <fieldset name="basic">
			
				<field
                    name="phone"
                    type="text"
                    default="+36"
                    label="MOD_mobilePhone"
                />
                <field
                name="landline"
                type="text"
                default="+36"
                label="MOD_landline"
                />
                <field
                name="email"
                type="text"
                default=""
                label="MOD_email"
                />
                <field
                name="address"
                type="text"
                default=""
                label="MOD_address"
                />
                <field
                name="web"
                type="text"
                default=""
                label="MOD_website"
                />
                <field
                name="discord"
                type="text"
                default=""
                label="MOD_discord"
                />
                <field
                name="twitter"
                type="text"
                default=""
                label="MOD_twitter"
                />
                <field
                name="linkedin"
                type="text"
                default=""
                label="MOD_linkedIn"
                />
                <field
                name="fax"
                type="text"
                default="+36"
                label="MOD_fax"
            />

                

                
                <field
                    type="spacer"
                    hr="true"
                />
    
            
                
            </fieldset>
            
            <fieldset name="advanced">
                
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                />
                
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                />
                
                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC"
                >
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                
                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                />
                
                <field
                    name="cachemode"
                    type="hidden"
                    default="static"
                >
                    <option value="static"></option>
                </field>
                
            </fieldset>
            
        </fields>
        
    </config>
    
    
    <updateservers>
        <!--<server type="collection">http://contacts.com/list.xml</server>-->
        <server type="extension" priority="1" name="Asikart contacts Module">http://update.asikart.com/module/mod_contacts.xml</server>
    </updateservers>
    
    
</extension>
